<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_soft"
    tools:context=".activities.ConversationSelectionActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_id_users"
        android:layout_width="match_parent"
        android:layout_height="477dp">

    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="382dp"
        android:layout_height="38dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_id_users">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/conversation_user_input"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:fontFamily="@font/montserrat"
            android:hint="Enter Email or Nickname" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/button_conv_chat"
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:text="Start Chat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2" />

</android.support.constraint.ConstraintLayout>