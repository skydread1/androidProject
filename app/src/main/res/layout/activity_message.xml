<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MessageActivity"
    >

  <ListView
      android:id="@+id/message_list"
      android:layout_width="wrap_content"
      android:layout_height="382dp"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      tools:layout_editor_absoluteY="16dp" />

  <android.support.design.widget.TextInputLayout
      android:id="@+id/input_message_layout"
      android:layout_width="261dp"
      android:layout_height="51dp"
      android:layout_marginTop="21dp"
      android:layout_marginEnd="123dp"
      android:layout_marginBottom="46dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/message_list">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/input_message2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_message" />
  </android.support.design.widget.TextInputLayout>

  <Button
      android:id="@+id/button_send_message2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="18dp"
      android:layout_marginTop="19dp"
      android:layout_marginEnd="17dp"
      android:layout_marginBottom="46dp"
      android:text="@string/send"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/input_message_layout"
      app:layout_constraintTop_toBottomOf="@+id/message_list" />

</android.support.constraint.ConstraintLayout>